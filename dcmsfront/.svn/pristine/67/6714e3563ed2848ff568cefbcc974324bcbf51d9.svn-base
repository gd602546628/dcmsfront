<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@include file="common.jsp" %>
<html>
<style>
    .login-page {

    }

    .login-main {
        margin-top: 200px;
    }

    .login-submit {
        margin-top: 20px;
    }
</style>
<head>
    <title>登录</title>
</head>
<body>
<div class="dc-page login-page">
    <div class="main flex-pack-center login-main">
        <form action="/dcmsfront/weixin/login.do" method="post" class="">
            <div class="weui-cell background-write">
                <div class="weui-cell_hd">
                    <label class="weui-label">手机号</label>
                </div>
                <div class="weui-cell__bd">
                    <input type="text" name="username" placeholder="手机号" class="weui-input">
                </div>
            </div>
            <div class="weui-cell background-write" style="margin-top: 20px">
                <div class="weui-cell_hd">
                    <label class="weui-label">密码</label>
                </div>
                <div class="weui-cell__bd">
                    <input type="password" name="password" placeholder="密码" class="weui-input">
                </div>
            </div>
            <input type="submit" value="登录" class="weui-btn weui-btn_primary login-submit">

            <a href="/dcmsfront/front/register" class="weui-btn weui-btn_primary login-submit">注册</a>
        </form>
    </div>
</div>
<script>
</script>
</body>
</html>
